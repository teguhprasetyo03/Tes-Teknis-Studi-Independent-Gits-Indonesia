        android:layout_margin="10dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_no4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO 4"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btn_no5"
